{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom"],
    "noEmit": true,
    "isolatedModules": false
  },
  "include": [
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ]
}

